    <select id="selectResultMapCollectionTest" resultMap="categoryAndMenuResultMap">

        SELECT

                A.CATEGORY_CODE,
                A.CATEGORY_NAME,
                A.REF_CATEGORY_CODE,
                B.MENU_CODE,
                B.MENU_NAME,
                B.MENU_PRICE,
                B.CATEGORY_CODE,
                B.ORDERABLE_STATUS
        FROM TBL_CATEGORY A
            LEFT JOIN TBL_MENU B ON(A.CATEGORY_CODE = B.CATEGORY_CODE)
        ORDER BY A.CATEGORY_CODE


    </select>

